<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/scrollView_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_FFFFFF"
              android:orientation="vertical"
              android:paddingBottom="@dimen/defender_y_ui_px_67.0"
              android:paddingLeft="@dimen/defender_x_ui_px_37.0"
              android:paddingRight="@dimen/defender_x_ui_px_37.0"
              android:paddingTop="@dimen/defender_y_ui_px_67.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="受检对象"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/defender_x_ui_px_10.0"
            android:drawableRight="@mipmap/icon_close"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/pack_up"
            android:textColor="@color/color_3586DA"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>
    </LinearLayout>


    <!--展开部分-->
    <LinearLayout
        android:id="@+id/layout_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_checkObj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_subject"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="抽样地点"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_checLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"
            tools:text="上海市浦东新区新金桥路27号"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="样品分类"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_sampleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:text="牛奶"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="检测项目"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_checkProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:text="三聚氰胺"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="检测时间"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_checkTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:text="2017-05-02 11：02：34"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="检测结果"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_checkResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:text="苏丹红；三聚氰胺"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/defender_y_ui_px_33.0">

            <TextView
                android:id="@+id/tv_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="判定结果"
                android:textColor="@color/color_BCC1C6"
                android:textSize="@dimen/defender_font_ui_px_24.0"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/defender_x_ui_px_128.0"
                android:layout_toRightOf="@id/tv_t1"
                android:text="设备编号"
                android:textColor="@color/color_BCC1C6"
                android:textSize="@dimen/defender_font_ui_px_24.0"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_adjustResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_t1"
                android:layout_marginTop="@dimen/defender_y_ui_px_27.0"
                android:text="检出"
                android:textColor="@color/color_090909"
                android:textSize="@dimen/defender_font_ui_px_28.0"/>

            <TextView
                android:id="@+id/tv_deviceNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_t2"
                android:layout_below="@id/tv_t1"
                android:layout_marginTop="@dimen/defender_y_ui_px_27.0"
                android:text="2342344"
                android:textColor="@color/color_090909"
                android:textSize="@dimen/defender_font_ui_px_28.0"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="样品名称"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/tv_sample_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入样品名称"
            android:lines="1"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="样品编号"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/tv_sample_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入样品编号"
            android:lines="1"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
            android:layout_weight="1"
            android:text="结果附件"
            android:textColor="@color/color_BCC1C6"
            android:textSize="@dimen/defender_font_ui_px_24.0"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_accessoryFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defender_y_ui_px_27.0"
            android:drawableRight="@mipmap/icon_attachmen"
            android:lines="1"
            android:text="扫描001.jpg"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>

    </LinearLayout>


    <!--可展开部分end-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
        android:text="其它信息"
        android:textColor="@color/color_BCC1C6"
        android:textSize="@dimen/defender_font_ui_px_24.0"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_layout_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_other_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_other_info"
            android:paddingLeft="0dp"
            android:paddingTop="@dimen/defender_y_ui_px_27.0"
            android:textColor="@color/color_090909"
            android:textSize="@dimen/defender_font_ui_px_28.0"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defender_y_ui_px_44.0"
        android:layout_weight="1"
        android:text="上传相应图片"
        android:textColor="@color/color_090909"
        android:textSize="@dimen/defender_font_ui_px_24.0"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/defender_y_ui_px_25.0"
        android:background="@color/color_FFFFFF">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>