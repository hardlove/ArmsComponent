<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/x_ui_px_55.0"
              android:paddingRight="@dimen/x_ui_px_55.0">
    <Button
        android:visibility="gone"
        android:onClick="TestScan"
        android:text="测试扫描"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:visibility="gone"
        android:onClick="TestSignature"
        android:text="测试电子签名"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y_ui_px_52.0"
        android:src="@mipmap/aboutus_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/x_ui_px_71.0"
        android:paddingTop="@dimen/y_ui_px_20.0"
        android:text="Food Defender"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_ui_px_46.0"/>

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="公司用户名"
        android:textSize="@dimen/font_ui_px_24.0"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/company_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        app:hintAnimationEnabled="true"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入公司用户名"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:lines="1"
            android:paddingLeft="0dp"
            android:textSize="@dimen/font_ui_px_40.0"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="用户名"
        android:textSize="@dimen/font_ui_px_24.0"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/userName_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true"
        app:hintEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:lines="1"
            android:paddingLeft="0dp"
            android:textSize="@dimen/font_ui_px_40.0"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="密码"
        android:textSize="@dimen/font_ui_px_24.0"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintAnimationEnabled="true"
        app:hintEnabled="false"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="0dp"
            android:textSize="@dimen/font_ui_px_40.0"/>
    </android.support.design.widget.TextInputLayout>

    <com.hardlove.cl.fooddefender.widgets.StateButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_ui_px_95.0"
        android:background="@color/colorPrimary"
        android:text="登陆"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/font_ui_px_36.0"
        app:normalBackgroundColor="@color/colorPrimary"
        app:pressedBackgroundColor="@color/colorPrimary"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/y_ui_px_80.0"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y_ui_px_2.0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/color_C2C2C2"
            />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/x_ui_px_5.0"
            android:src="@mipmap/thermo_fisher_scientific_logo"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y_ui_px_2.0"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/color_C2C2C2"
            />
    </LinearLayout>

</LinearLayout>