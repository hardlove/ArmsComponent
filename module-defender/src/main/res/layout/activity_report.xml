<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hardlove.mobiledf.widgets.CustomToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/nav_icon_back"
        app:leftTitle="反馈意见"
        app:rightIcon="@mipmap/nav_icon_upload" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x_ui_px_37.0"
        android:paddingRight="@dimen/x_ui_px_37.0"
        android:paddingTop="@dimen/y_ui_px_53.0">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="邮件"
            android:textSize="@dimen/font_ui_px_24.0" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="true"
            app:hintEnabled="false">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入电子邮件地址"
                android:inputType="textEmailAddress"
                android:lines="1" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y_ui_px_37.0"
            android:text="意见"
            android:textSize="@dimen/font_ui_px_24.0" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_layout_adjust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="我们如何改进？" />

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

</LinearLayout>