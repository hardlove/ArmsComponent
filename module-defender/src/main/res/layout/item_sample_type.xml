<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="center"
    >

    <com.hardlove.mobiledf.widgets.StateButton
        android:id="@+id/stb_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/defender_y_ui_px_60.0"
        android:clickable="false"
        android:gravity="center"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="@dimen/defender_x_ui_px_25.0"
        android:paddingRight="@dimen/defender_x_ui_px_25.0"
        android:shadowColor="@android:color/transparent"
        android:text="粮食及粮食制品"
        android:textSize="@dimen/defender_font_ui_px_28.0"

        app:normalBackgroundColor="@color/color_FFFFFF"
        app:normalStrokeColor="@color/color_BCC1C6"
        app:normalStrokeWidth="@dimen/defender_x_ui_px_1.0"

        app:normalTextColor="@color/color_505050"
        app:pressedBackgroundColor="@color/colorPrimary"
        app:pressedStrokeColor="@color/colorPrimary"

        app:pressedStrokeWidth="@dimen/defender_x_ui_px_1.0"
        app:pressedTextColor="@color/color_FFFFFF"
        app:round="true"

        app:unableBackgroundColor="@color/color_FFFFFF"
        app:unableStrokeColor="@color/color_BCC1C6"
        app:unableStrokeWidth="@dimen/defender_x_ui_px_1.0"
        app:unableTextColor="@color/color_505050"

        />


</LinearLayout>

