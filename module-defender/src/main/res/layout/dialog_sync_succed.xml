<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/tilps_synchronization_results" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_ui_px_49.0"
        android:paddingLeft="@dimen/font_ui_px_43.0"
        android:paddingRight="@dimen/x_ui_px_43.0"
        android:text="同步检测结果"
        android:textColor="@color/color_1F1F1F"
        android:textSize="@dimen/font_ui_px_36.0"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y_ui_px_30.0"
        android:paddingLeft="@dimen/font_ui_px_43.0"
        android:paddingRight="@dimen/x_ui_px_43.0"
        android:text="检测结果已同步到本地，是否立即上传?"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/font_ui_px_32.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y_ui_px_31.0"
        android:layout_marginRight="@dimen/x_ui_px_60.0"
        android:layout_marginTop="@dimen/y_ui_px_64.0"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以后再说"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_ui_px_28.0" />

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x_ui_px_76.0"
            android:text="上传"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_ui_px_28.0" />

    </LinearLayout>

</LinearLayout>