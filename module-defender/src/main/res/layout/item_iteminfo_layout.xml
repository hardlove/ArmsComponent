<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/item_root"
             android:layout_width="match_parent"
             android:layout_height="@dimen/defender_y_ui_px_161.0"
             android:layout_marginLeft="@dimen/defender_x_ui_px_35.0"
             android:layout_marginRight="@dimen/defender_x_ui_px_35.0"
             android:background="@drawable/item_selector_bg"
             android:descendantFocusability="blocksDescendants"
             android:gravity="center_vertical"
             android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|top"
        android:src="@mipmap/list_label"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/defender_y_ui_px_20.0"
        android:paddingLeft="@dimen/defender_x_ui_px_22.0"
        android:paddingRight="@dimen/defender_x_ui_px_22.0"
        android:paddingTop="@dimen/defender_y_ui_px_20.0">


        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defender_x_ui_px_11.0"
            android:layout_marginRight="@dimen/defender_x_ui_px_22.0"
            android:clickable="false"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/list_icon_location"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="上海市浦东新区新金桥路27号家乐福超市"
                android:textColor="@color/color_090909"
                android:textSize="@dimen/defender_font_ui_px_28.0"/>


            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defender_y_ui_px_1.0"
                android:layout_below="@id/tv_location"
                android:background="@mipmap/list_dividers"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <!--第一栏-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_00_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="文件名："
                                android:textColor="@color/color_BCC1C6"
                                android:textSize="@dimen/defender_font_ui_px_24.0"/>

                            <TextView
                                android:id="@+id/tv_00"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:lines="1"
                                android:text="003"
                                android:textColor="@color/color_84878D"
                                android:textSize="@dimen/defender_font_ui_px_24.0"/>

                            <TextView
                                android:id="@+id/tv_01_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="样品："
                                android:textColor="@color/color_BCC1C6"
                                android:textSize="@dimen/defender_font_ui_px_24.0"/>

                            <TextView
                                android:id="@+id/tv_01"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:lines="1"
                                android:text="牛奶"
                                android:textColor="@color/color_84878D"
                                android:textSize="@dimen/defender_font_ui_px_24.0"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!--第二栏-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_10_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="样品编号："
                                android:textColor="@color/color_BCC1C6"
                                android:textSize="@dimen/defender_font_ui_px_24.0"/>

                            <TextView
                                android:id="@+id/tv_10"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:lines="1"
                                android:text="2364234656"
                                android:textColor="@color/color_84878D"
                                android:textSize="@dimen/defender_font_ui_px_24.0"/>

                            <TextView
                                android:id="@+id/tv_11_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="结果："
                                android:textColor="@color/color_BCC1C6"
                                android:textSize="@dimen/defender_font_ui_px_24.0"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tv_11"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="未检出"
                                android:textColor="@color/color_84878D"
                                android:textSize="@dimen/defender_font_ui_px_24.0"
                                android:visibility="gone"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/radius_primary"
                    android:gravity="center"
                    android:paddingBottom="@dimen/defender_y_ui_px_8.0"
                    android:paddingLeft="@dimen/defender_x_ui_px_18.0"
                    android:paddingRight="@dimen/defender_x_ui_px_18.0"
                    android:paddingTop="@dimen/defender_y_ui_px_8.0"
                    android:text="详情"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/defender_font_ui_px_20.0"/>


            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</FrameLayout>